<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="360"
                android:centerColor="#F74687"
                android:endColor="#FBC9AB"
                android:startColor="#DA40EC"
                android:type="linear" />
            <corners android:radius="50dp" />
            <size
                android:width="24dp"
                android:height="24dp" />
        </shape>
    </item>

    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="50dp" />
            <solid android:color="@color/colorPrimaryDark" />
        </shape>
    </item>

</layer-list>